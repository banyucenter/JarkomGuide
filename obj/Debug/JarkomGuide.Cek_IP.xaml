<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="JarkomGuide.Cek_IP">
	<ContentPage.Content>
		<StackLayout Padding="20">
			<StackLayout><Label Text="CEK IP ADDRESS" FontAttributes="Bold"></Label></StackLayout>
			<StackLayout BackgroundColor="#f39c12" Padding="20" HeightRequest="160">
				<Label x:Name="ipnya" Text="IP : " TextColor="White" FontSize="20" FontAttributes="Bold"></Label>
				<Label x:Name="kelasnya" Text="Kelas: " TextColor="White" FontSize="20"></Label>
				<Label x:Name="subnetnya" Text="Subnet Mask : " TextColor="White" FontSize="20"></Label>
				<Label x:Name="networknya" Text="Network :" TextColor="White" FontSize="20"></Label>
				<Label x:Name="prefixnya" Text="Prefix :" TextColor="White" FontSize="20"></Label>
			</StackLayout>
			<StackLayout>
				<Label Text="Masukan IP Address"></Label>
			<Grid>
			  <Grid.RowDefinitions>
			    <RowDefinition Height="*" />
			    <RowDefinition Height="*" />
			  </Grid.RowDefinitions>
			  <Grid.ColumnDefinitions>
			    <ColumnDefinition Width="*" />
			    <ColumnDefinition Width="*" />
			  </Grid.ColumnDefinitions>
			  <Entry Placeholder="" x:Name="satu" Keyboard="Numeric" Grid.Row="0" Grid.Column="0" />
			  <Entry Placeholder="" x:Name="dua" Keyboard="Numeric" Grid.Row="0" Grid.Column="1" />
			  <Entry Placeholder="" x:Name="tiga" Keyboard="Numeric" Grid.Row="0" Grid.Column="2" />
			  <Entry Placeholder="" x:Name="empat" Keyboard="Numeric" Grid.Row="0" Grid.Column="3" />
			</Grid>
				
				<Button Text="Cek IP" HeightRequest="60" BackgroundColor="#3498db" TextColor="White" Clicked="prosesip"></Button>


			</StackLayout>
			
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
